<% @profiles.each do |profile| %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="profile-card">
          <div class="col-md-2 col-sm-2 col-xs-3">
            <div class="avatar medium">
              <%= image_tag profile.avatar.medium.url %>
            </div>
          </div>
          <div class="col-md-8 col-sm-8 col-xs-6">
            <div class="user-infos">
              <div class="user">
                <%= link_to "#{profile.name}", user_profile_permalink(profile), class: 'name' %>
                <%= link_to "@#{profile.username}", user_profile_permalink(profile), class: 'username' if profile.username.present? %>
              </div>
              <div class="introduction">
                <%= profile.introduction %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-3">
            <div class="actions">
              <%= render partial: 'follow_button', locals: {user_id: profile.user_id, following: @following_ids.include?(profile.user_id), mobile_friendly: true} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render partial: "shared/pagination", locals: {resource: @profiles} %>
