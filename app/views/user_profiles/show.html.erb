<div class="row">
  <div class="col-md-12">
    <div class="hidden-md hidden-lg">
      <div class="user-profile">
        <%= render partial: 'user_profile' %>
      </div>
    </div>
    <div class="profile-bar">
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-8">
              <div class="stats clearfix">
                <div class="stat">
                  <div class="stat-title">Bookmarks</div>
                  <div class="stat-count"><%= @statistics['bookmarks_count'] %></div>
                </div>
                <div class="stat">
                  <div class="stat-title">Following</div>
                  <div class="stat-count"><%= @statistics['following_count'] %></div>
                </div>
                <div class="stat">
                  <div class="stat-title">Followers</div>
                  <div class="stat-count"><%= @statistics['followers_count'] %></div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="actions">
                <% if current_user %>
                  <% if current_user == @profile.user %>
                  <%= link_to t(".actions.edit"), edit_current_user_profile_path, class: 'btn btn-default' %>
                  <% else %>
                    <% if @following == true %>
                    <%= link_to user_relationship_path(@profile.user.id), method: "delete", class: 'btn btn-default following-button' do %>
                      <span class="following-text"><%= t(".following") %></span>
                      <span class="unfollow-text"><%= t(".unfollow") %></span>
                    <% end %>
                    <% elsif @following == false %>
                    <%= link_to user_relationships_path(user_id: @profile.user.id), method: "post", class: 'btn btn-primary' do %>
                      <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= t(".follow") %>
                    <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 hidden-xs hidden-sm">
    <div class="user-profile">
      <%= render partial: 'user_profile' %>
    </div>
  </div>
  <div class="col-md-8 col-sm-12">
    <%= render partial: 'shared/bookmark_list_with_date', locals: {bookmarks: @bookmarks} %>
  </div>
</div>
