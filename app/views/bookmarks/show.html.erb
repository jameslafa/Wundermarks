<% if current_user %>
<div class="row main-actions">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to bookmarks_path, class: 'btn btn-default pull-left' do%>
      <span class="glyphicon glyphicon-th-list"></span> <%= t(".action.index") %>
    <% end %>
    <div class="btn-group pull-right" role="group">
      <%= link_to @bookmark, class: 'action-destroy btn btn-default', method: :delete, data: { confirm: t("confirmations.bookmark_delete") } do %>
      <span class="glyphicon glyphicon-trash"></span> Delete
      <% end %>
      <%= link_to edit_bookmark_path(@bookmark), class: 'action-edit btn btn-default' do%>
      <span class="glyphicon glyphicon-edit"></span> Edit
      <% end %>
    </div>
  </div>
</div>
<% end %>

<div class="row details">
  <div class="col-md-10 col-md-offset-1">
    <div class="title"><%= @bookmark.title %></div>
    <div class="link"><%= link_to @bookmark.url, bookmark_url(@bookmark, redirect: 1) %></div>
    <div class="description"><%= simple_format @bookmark.description %></div>

    <div class="tags">
      <% if @bookmark.tag_list.present? %>
      <% @bookmark.tag_list.each_with_index do |tag, index| %>
      <% if current_user %>
      <%= link_to tag, bookmarks_path(q: tag), class: 'tag' %>
      <% else %>
      <%= link_to tag, root_path(q: tag), class: 'tag' %>
      <% end %>
      <% end %>
      <% else %>
      &nbsp;
      <% end %>
    </div>
  </div>
</div>

<div class="share">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="share-title"><%= t(".share.title")%></div>
      <div class="share-options">
        <a href="<%= share_twitter_popup_url(@bookmark) %>" class="social_share" data-social-media="twitter"><%= image_tag("social_medias/twitter.svg", class:'share twitter')%></a>
        <a href="<%= share_facebook_popup_url(@bookmark) %>" class="social_share" data-social-media="facebook"><%= image_tag("social_medias/facebook.svg", class:'share facebook')%></a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="share-help"><%= t(".share.help_html")%></div>
      <div class="share-statistics">
        <% @bookmark.sharing_statistics.each do |source| %>
          <span class="stat"><strong><%= source[0].capitalize %></strong>: <%= source[1] %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
