<% if !flash.empty? %>
<div class="col-md-6 col-md-offset-3">
  <% if flash[:notice] %>
  <div class="row alert alert-dark" role="alert">
    <%= flash[:notice].html_safe %>
  </div>
  <% end %>
  <% if flash[:alert] %>
  <div class="row alert alert-dark" role="alert">
    <%= flash[:alert].html_safe %>
  </div>
  <% end %>
</div>
<% end %>
