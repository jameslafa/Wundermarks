<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Has bookmarklet</th>
    <th>Bookmarklet version</th>
    <th>Bookmarklet up to date</th>
  </tr>
<% @user_data.each do |user| %>
  <% if user[:has_bookmarket] && user[:bookmarket_up_to_date] %>
    <tr class="success">
  <% elsif user[:has_bookmarket] && !user[:bookmarket_up_to_date] %>
    <tr class="warning">
  <% else %>
    <tr class="danger">
  <% end %>
    <td><%= user[:id] %></td>
    <td><%= user[:name] %></td>
    <td><%= mail_to "#{user[:name]} <#{user[:email]}>", user[:email] %></td>
    <td><%= user[:has_bookmarket] %></td>
    <td><%= user[:bookmarklet_version] %></td>
    <td><%= user[:bookmarket_up_to_date] %></td>
  </tr>
<% end %>
</table>
