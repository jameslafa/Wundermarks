<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Created At</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
    <th>Last Visit At</th>
  </tr>
<% @user_data.each do |user| %>
<% if user[:last_visit] > 1.week.ago %>
  <tr class="success">
<% elsif user[:last_visit] > 1.month.ago %>
  <tr class="warning">
<% else %>
  <tr class="danger">
<% end %>
    <td><%= user[:id] %></td>
    <td><%= user[:created_at] %></td>
    <td><%= user[:name] %></td>
    <td><%= user[:username] %></td>
    <td><%= mail_to "#{user[:name]} <#{user[:email]}>", user[:email] %></td>
    <td><%= user[:last_visit] %></td>
  </tr>
<% end %>
</table>
